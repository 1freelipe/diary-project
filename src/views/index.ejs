<%- include('includes/messages'); %>

<% if (user) { %>
    <div class="responsive-table my-table">
        <table class="table my-3">
            <thead class="text-center">
                <tr>
                    <th>Nome</th>
                    <th>Sobrenome</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th colspan="2">Manipular</th>
                </tr>
            </thead>
            <tbody>
                <% contatos.forEach(contato => { %>
                    <tr>
                        <td><%= contato.nome %></td>
                        <td><%= contato.sobrenome %></td>
                        <td><%= contato.telefone %></td>
                        <td><%= contato.email %></td>
                        <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                        <td><a href="/contato/delete/<%= contato._id %>" class="text-danger">Excluir</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } %>



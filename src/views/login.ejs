<%- include('includes/head.ejs') %>
    <%- include('includes/nav.ejs') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-5">
                    <h1 class="display-1 text-center">Criar conta ou entrar</h1>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

                    <%- include('includes/messages.ejs'); %>

                    <div class="row">
                        <div class="col-lg">
                            <h4>Faça seu cadastro</h4>
                            <form action="/login/register" class="form-cadastro" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group input-container">
                                    <label>Endereço de email</label>
                                    <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Seu email" name="email">
                                </div>
                                <div class="form-group input-container-password">
                                    <label>Senha</label>
                                    <input type="password" class="form-control" 
                                        placeholder="Senha" name="password">
                                </div>
                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input">
                                    <label class="form-check-label" for="exampleCheck1">Aceito os termos de
                                        condição</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Criar minha conta</button>
                            </form>
                        </div>

                        <div class="col-lg">
                            <h4>Faça login</h4>
                            <form action="/login/initial" class="form-login" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group input-container">
                                    <label for="exampleInputEmail1">Endereço de email</label>
                                    <input type="email" class="form-control"
                                        aria-describedby="emailHelp" placeholder="Seu email" name="email">
                                </div>
                                <div class="form-group input-container-password">
                                    <label>Senha</label>
                                    <input type="password" class="form-control"
                                        placeholder="Senha" name="password">
                                </div>
                                <div class="form-group form-check">
                                    <input type="checkbox" class="form-check-input">
                                    <label class="form-check-label" for="exampleCheck1">Aceito os termos de
                                        condição</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Fazer login</button>
                            </form>

                        </div>
                    </div>

                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer.ejs') %>